<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_xz"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:paddingRight="10dp"
            android:src="@mipmap/ico_lb026" />

        <ImageView
            android:id="@+id/img_beihuo"
            android:layout_width="110dp"
            android:layout_height="95dp"
            android:scaleType="centerCrop"
            android:src="@drawable/moren" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                style="@style/Font14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="立冰空调立冰空调立冰空调立冰空调立冰空调调" />

            <TextView
                android:id="@+id/tv_type"
                style="@style/Font12_hui2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="规格：1.5匹  3级预定" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_yajin"
                    style="@style/Font14_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="押金：389900"
                    android:textColor="@color/red" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_numss"
                    style="@style/Font13_hui2"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:text="押金：389900"
                   />

                <LinearLayout
                    android:layout_width="85dp"
                    android:id="@+id/ll_jiajian"
                    android:layout_height="26dp"
                    android:background="@drawable/baikuang">

                    <TextView
                        android:id="@+id/tv_jian"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.1"
                        android:gravity="center"
                        android:text="-"
                        android:textColor="@color/txthui" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/xian" />

                    <TextView
                        android:id="@+id/tv_nums"
                        style="@style/Font13"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="1" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/xian" />

                    <TextView
                        android:id="@+id/tv_jia"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.1"
                        android:gravity="center"
                        android:text="+"
                        android:textColor="@color/txthui" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/xian"/>
</LinearLayout>
