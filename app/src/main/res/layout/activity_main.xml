<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_main_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <include layout="@layout/xian" />



    <RadioGroup
        android:id="@+id/rg_main_check"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_main_check_1"
            style="@style/Font11_hui"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/rb_main_selector_1"
            android:gravity="center"
            android:paddingTop="3dp"
            android:text="首页"
            android:textColor="@drawable/selector_main_rb_check" />

        <RadioButton
            android:id="@+id/rb_main_check_2"
            style="@style/Font11_hui"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/rb_main_selector_2"
            android:gravity="center"
            android:paddingTop="3dp"
            android:text="项目报备"
            android:textColor="@drawable/selector_main_rb_check" />

        <RadioButton
            android:id="@+id/rb_main_check_3"
            style="@style/Font11_hui"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/rb_main_selector_3"
            android:gravity="center"
            android:paddingTop="3dp"
            android:text="一键报修"
            android:textColor="@drawable/selector_main_rb_check" />

        <RadioButton
            android:id="@+id/rb_main_check_4"
            style="@style/Font11_hui"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/rb_main_selector_4"
            android:gravity="center"
            android:paddingTop="3dp"
            android:text="我要推广"
            android:textColor="@drawable/selector_main_rb_check" />
        <RadioButton
            android:id="@+id/rb_main_check_5"
            style="@style/Font11_hui"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/rb_main_selector_5"
            android:gravity="center"
            android:paddingTop="3dp"
            android:text="个人中心"
            android:textColor="@drawable/selector_main_rb_check" />
    </RadioGroup>

</LinearLayout>
