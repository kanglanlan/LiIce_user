<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tian_jia_yin_hang_ka"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    tools:context=".TianJiaYinHangKaActivity">

    <include layout="@layout/title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                style="@style/Font14"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:text="持卡人姓名" />

            <EditText
                android:id="@+id/tv_name"
                style="@style/Font14_hui2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:hint="请输入持卡人姓名"
                android:maxLength="20" />
        </LinearLayout>

        <include layout="@layout/xiantwo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                style="@style/Font14"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:text="银行卡号" />

            <EditText
                android:id="@+id/tv_kahao"
                style="@style/Font14_hui2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:hint="请输入银行卡号"
                android:inputType="number"
                android:maxLength="20" />
        </LinearLayout>

        <include layout="@layout/xiantwo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                style="@style/Font14"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:text="银行" />

            <TextView
                android:id="@+id/tv_yhk"
                style="@style/Font14_hui2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:drawableRight="@mipmap/icon_youlight"
                android:gravity="center_vertical"
                android:hint="请选择银行" />
        </LinearLayout>

        <include layout="@layout/xiantwo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                style="@style/Font14"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:text="开户行" />

            <EditText
                android:id="@+id/tv_huhang"
                style="@style/Font14_hui2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:hint="请输入开户行名称" />
        </LinearLayout>

        <include layout="@layout/xiantwo" />


    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <Button
        android:id="@+id/bt_tijiao"
        style="@style/Font15_white"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="15dp"
        android:background="@drawable/loginbt"
        android:text="提交" />
</LinearLayout>
