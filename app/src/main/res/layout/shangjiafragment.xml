<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.daimajia.slider.library.SliderLayout xmlns:custom="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/slider_shouye_lunbo"
                    android:layout_width="match_parent"
                    android:layout_height="285dp"
                    android:background="@color/white"
                    android:focusable="false"
                    custom:auto_cycle="true"
                    custom:indicator_visibility="visible"
                    custom:pager_animation="Default"
                    custom:pager_animation_span="200" />

                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_gravity="right|bottom"
                    android:layout_margin="15dp"
                    android:background="@drawable/numbg"
                    android:gravity="center"
                    android:text="1/8"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    android:visibility="gone" />
            </FrameLayout>
<include layout="@layout/xian"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/qian"
                            android:textColor="@color/red"
                            android:textSize="11dp" />

                        <TextView
                            android:id="@+id/tv_jiage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:text="0.00"
                            android:textColor="@color/red"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/tv_fukuannum"
                            style="@style/Font11_hui"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="0人购买" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_name"
                        style="@style/Font15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:text="立冰" />


                </LinearLayout>

                <TextView
                    android:id="@+id/tv_sc"
                    style="@style/Font12_hui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:drawableTop="@mipmap/ico_lb021"
                    android:padding="10dp"
                    android:text="收藏" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_type"
                style="@style/Font12_hui2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="纳米" />

            <LinearLayout
                android:id="@+id/ll_biaoqian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"></LinearLayout>

            <include layout="@layout/xiantwo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    style="@style/Font13_hui2"
                    android:id="@+id/tv_tc1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="48小时内送装" />

                <TextView
                    style="@style/Font13_hui2"
                    android:layout_width="0dp"
                    android:id="@+id/tv_tc2"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="压缩机6年保修" />

                <TextView
                    style="@style/Font13_hui2"
                    android:layout_width="0dp"
                    android:id="@+id/tv_tc3"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="深圳" />
            </LinearLayout>

            <include layout="@layout/xiantwo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    style="@style/Font13_hui2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="规格" />

                <TextView
                    android:id="@+id/tv_guige"
                    style="@style/Font13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="1.5匹" />
            </LinearLayout>

            <include layout="@layout/xian_3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    style="@style/Font13_hui2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="补贴积分" />

                <TextView
                    android:id="@+id/tv_butie"
                    style="@style/Font13"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:drawableRight="@mipmap/icon_youlight"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/cheng" />
            </LinearLayout>

            <include layout="@layout/xiantwo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    style="@style/Font13_hui2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="配送方式" />

                <TextView
                    android:id="@+id/tv_peisong"
                    style="@style/Font13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="right"
                    android:text="送装一体" />
            </LinearLayout>

            <include layout="@layout/xian_3" />

            <android.support.design.widget.TabLayout
                android:id="@+id/tablayout_mo"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                app:tabGravity="center"
                app:tabIndicatorColor="@color/main"
                app:tabIndicatorHeight="2dp"
                app:tabMinWidth="0dp"
                app:tabMode="fixed"
                app:tabSelectedTextColor="@color/black"
                app:tabTextAppearance="@style/Font14"
                app:tabTextColor="@color/black" />

            <include layout="@layout/xian" />

            <WebView
                android:id="@+id/web_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></WebView>
        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_kefu"
            style="@style/Font12_hui2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ico_lb024"
            android:gravity="center"
            android:paddingTop="3dp"
            android:text="客服" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_goueuche"
                style="@style/Font12_hui2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableTop="@mipmap/ico_lb025"
                android:gravity="center"
                android:paddingTop="3dp"
                android:text="购物车" />

            <TextView
                android:id="@+id/tv_cartnum"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="right"
                android:layout_marginRight="13dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/y"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="9dp"
                android:visibility="gone" />
        </FrameLayout>


        <TextView
            android:id="@+id/tv_duihuan"
            style="@style/Font14_white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/cheng"
            android:gravity="center"
            android:text="立即购买" />

        <TextView
            android:id="@+id/tv_tuiguang"
            style="@style/Font14_white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/main"
            android:gravity="center"
            android:text="推广" />
    </LinearLayout>
</LinearLayout>