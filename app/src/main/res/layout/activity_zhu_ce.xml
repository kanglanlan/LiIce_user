<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_zhu_ce"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <EditText
        android:id="@+id/et_zhuce_phone"
        style="@style/Font15_hui2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="35dp"
        android:background="@color/white"
        android:hint="请输入你的手机号"
        android:inputType="phone"
        android:maxLength="11" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/xian" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_zhuce_yzm"
            style="@style/Font15_hui2"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:hint="请输入验证码"
            android:inputType="number"
            android:maxLength="6" />

        <TextView
            android:id="@+id/tv_getyzm"
            style="@style/Font12_white"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_round_blue_15"
            android:gravity="center"
            android:text="获取验证码" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/xian" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_zhuce_mima"
            style="@style/Font15_hui2"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:hint="请输入密码（最少6位）"
            android:inputType="textPassword"
            android:maxLength="20" />

        <ToggleButton
            android:id="@+id/img_eye"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/bt_mima"
            android:padding="10dp"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:textOff=""
            android:textOn="" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/xian" />

    <LinearLayout
        android:id="@+id/ll_xieyi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/ico_lb006" />

        <TextView
            style="@style/Font12_hui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="注册/登录即代表同意" />

        <TextView
            style="@style/Font11_hui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《立冰用户使用协议》"
            android:textColor="@color/main" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_zhuce"
        style="@style/Font15_white"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/loginbt"
        android:text="立即注册" />

</LinearLayout>
