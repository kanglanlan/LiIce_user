<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_huan_bang_phone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    tools:context="com.meida.liice.HuanBangPhoneActivity">

    <include layout="@layout/title" />

    <TextView
        style="@style/Font12_hui2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#FEFFC1"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="为了您的账户安全，请完成身份验证" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_phone"
            style="@style/Font14"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="***" />

        <include layout="@layout/xiantwo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_zhuce_yzm"
                style="@style/Font15_hui2"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:hint="请输入验证码"
                android:inputType="number"
                android:maxLength="6" />

            <TextView
                android:id="@+id/tv_getyzm"
                style="@style/Font12_white"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="@drawable/bg_round_blue_15"
                android:gravity="center"
                android:text="获取验证码" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/bt_zhuce"
        style="@style/Font15_white"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/loginbt"
        android:text="提交" />

</LinearLayout>
