<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_huan_bang_phoneqr"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.meida.liice.HuanBangPhoneqrActivity">

    <include layout="@layout/title" />

    <EditText
        android:id="@+id/et_phone"
        style="@style/Font15_hui2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="35dp"
        android:background="@color/white"
        android:hint="请输入你的手机号"
        android:inputType="phone"
        android:maxLength="11" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/xian" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_zhuce_yzm"
            style="@style/Font15_hui2"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:hint="请输入验证码"
            android:inputType="number"
            android:maxLength="6" />

        <TextView
            android:id="@+id/tv_getyzm"
            style="@style/Font12_white"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_round_blue_15"
            android:gravity="center"
            android:text="获取验证码" />
    </LinearLayout>
    <Button
        android:id="@+id/bt_bd"
        style="@style/Font15_white"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/loginbt"
        android:text="确认绑定" />
</LinearLayout>
