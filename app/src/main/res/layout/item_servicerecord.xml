<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="10dp"
              android:background="@color/white"
              android:gravity="center"
              android:orientation="vertical"
              android:paddingBottom="10dp"
              android:paddingLeft="15dp"
              android:paddingRight="15dp"
              android:paddingTop="15dp"
    >
    <!--申请时间  状态-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_applytime_itemsr"
            style="@style/Font14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="申请时间："/>

        <TextView
            android:id="@+id/tv_state_itemsr"
            style="@style/Font14_hui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已完成"/>
    </LinearLayout>
    <!--报修人-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            style="@style/Font14_hui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="报修人："/>

        <TextView
            android:id="@+id/tv_ownername_itemsr"
            style="@style/Font14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>
    </LinearLayout>
    <!--报修电话-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            style="@style/Font14_hui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="报修电话："/>

        <TextView
            android:id="@+id/tv_tel_itemsr"
            style="@style/Font14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>
    </LinearLayout>
    <!--维修机型-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            style="@style/Font14_hui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="维修机型："/>

        <TextView
            android:id="@+id/tv_type_itemsr"
            style="@style/Font14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>
    </LinearLayout>
    <!--备注-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_beizhu"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            style="@style/Font14_hui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注："/>

        <TextView
            android:id="@+id/tv_note_itemsr"
            style="@style/Font14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>
    </LinearLayout>
    <!--上门时间-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            style="@style/Font14_hui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上门时间："/>

        <TextView
            android:id="@+id/tv_servicetime_itemsr"
            style="@style/Font14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_detail_itemsr"
            style="@style/Font13_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_round_blue_5"
            android:paddingBottom="7dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="7dp"
            android:text="查看详情"/>

        <TextView
            android:id="@+id/tv_pingjia_itemsr"
            style="@style/Font13_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_round_org_5"
            android:paddingBottom="7dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="7dp"
            android:text="  去评价  "/>
    </LinearLayout>
    <include layout="@layout/xian"/>
</LinearLayout>