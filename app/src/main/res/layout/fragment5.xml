                                android:layout_height="wrap_content"
                                android:src="@mipmap/ico_lb072" />

                        </FrameLayout>

                        <TextView
                            style="@style/Font12_hui2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp"
                            android:text="报备的项目" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_duihuan_fg05"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/ico_lb073" />


                        </FrameLayout>

                        <TextView
                            style="@style/Font12_hui2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp"
                            android:text="已兑换商品" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_baoxiu_fg05"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="3dp"
                                android:src="@mipmap/ico_lb074" />

                            <TextView
                                android:id="@+id/tv_msg3_fg06"
                                style="@style/Font12_white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:background="@drawable/bg_round_org_msg"
                                android:gravity="center"
                                android:maxLength="2"
                                android:text="2"
                                android:textSize="10sp"
                                android:visibility="gone" />

                        </FrameLayout>

                        <TextView
                            style="@style/Font12_hui2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="报修记录" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!--申请  实名 收藏  地址
                关于  操作 意见   设置 -->
            <LinearLayout
                android:id="@+id/lay_other2_fg05"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lay_other1_fg05"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_round_white_10"
                android:orientation="vertical"
                android:paddingBottom="15dp"
                android:paddingTop="15dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/lay_shenqing_fg05"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/ico_lb075" />


                        </FrameLayout>

                        <TextView
                            style="@style/Font12_hui2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp"
                            android:text="申请服务商" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_renzheng_fg05"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/ico_lb076" />

                        </FrameLayout>

                        <TextView
                            style="@style/Font12_hui2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp"
                            android:text="实名认证" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_shoucang_fg05"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/ico_lb077" />


                        </FrameLayout>

                        <TextView
                            style="@style/Font12_hui2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp"
                            android:text="我的收藏" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_dizhi_fg05"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/ico_lb078" />


                        </FrameLayout>

                        <TextView
                            style="@style/Font12_hui2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp"
                            android:text="收货地址" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/lay_guanyu_fg05"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/fx" />


                        </FrameLayout>

                        <TextView
                            style="@style/Font12_hui2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp"
                            android:text="推荐用户" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_caozuo_fg05"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/ico_lb080" />

                        </FrameLayout>

                        <TextView
                            style="@style/Font12_hui2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp"
                            android:text="APP操作" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_fankui_fg05"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/ico_lb081" />


                        </FrameLayout>

                        <TextView
                            style="@style/Font12_hui2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp"
                            android:text="意见反馈" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_shezhi_fg05"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/ico_lb082" />


                        </FrameLayout>

                        <TextView
                            style="@style/Font12_hui2"
                            android:layout_width="wrap_content"
