<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/lay_toolbar_fg05"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingTop="@dimen/toolbar_padding_top"
                android:background="@color/main"
                android:fitsSystemWindows="true">

                <TextView
                    style="@style/Font17_white"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/main"
                    android:gravity="center"
                    android:text="个人中心"
                    />


            </RelativeLayout>
            <!--顶部个人 信息-->
            <LinearLayout
                android:id="@+id/lay_top_pinfo_fg05"
                android:layout_width="match_parent"
                android:paddingTop="10dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/lay_toolbar_fg05"
                android:background="@color/main"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="45dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <com.meida.MyView.CircleImageView
                    android:id="@+id/img_head_fg05"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ico_lb084"
                    app:border_width="3dp"
                    app:border_color="#55ffffff"
                    app:riv_border_color="#66ffffff"
                    app:riv_border_width="3dp"
                    app:riv_oval="true" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_name_fg05"
                        style="@style/Font18_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name" />

                    <TextView
                        android:id="@+id/tv_tel_fg05"
                        style="@style/Font12_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:text="123456748944" />

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ico_lb083" />
            </LinearLayout>

            <!--全部订单-->
            <LinearLayout
                android:id="@+id/lay_orders_fg05"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lay_top_pinfo_fg05"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="-25dp"
                android:background="@drawable/bg_round_white_10"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/lay_orderall_fg05"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="15dp"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:paddingTop="15dp">

                    <TextView
                        style="@style/Font15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="全部订单" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_youlight" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/xian" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="15dp"
                    android:paddingTop="10dp">

                    <LinearLayout
                        android:id="@+id/lay_order1_fg05"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:src="@mipmap/ico_lb067" />

                            <TextView
                                android:id="@+id/tv_msg1_fg05"
                                style="@style/Font12_white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:background="@drawable/bg_round_org_msg"
                                android:gravity="center"
                                android:maxLength="2"
                                android:text="2"
                                android:textSize="10sp"
                                android:visibility="gone" />

                        </FrameLayout>

                        <TextView
                            style="@style/Font14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp"
                            android:text="待付款" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_order2_fg05"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:src="@mipmap/ico_lb068" />

                            <TextView
                                android:id="@+id/tv_msg2_fg05"
                                style="@style/Font12_white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:background="@drawable/bg_round_org_msg"
                                android:gravity="center"
                                android:maxLength="2"
                                android:text="2"
                                android:textSize="10sp"
                                android:visibility="gone" />

                        </FrameLayout>

                        <TextView
                            style="@style/Font14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp"
                            android:text="待送货安装" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_order3_fg05"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:src="@mipmap/ico_lb069" />

                            <TextView
                                android:id="@+id/tv_msg3_fg05"
                                style="@style/Font12_white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:background="@drawable/bg_round_org_msg"
                                android:gravity="center"
                                android:maxLength="2"
                                android:text="2"
                                android:textSize="10sp"
                                android:visibility="gone" />

                        </FrameLayout>

                        <TextView
                            style="@style/Font14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp"
                            android:text="待评价" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_order4_fg05"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:src="@mipmap/ico_lb070" />

                            <TextView
                                android:id="@+id/tv_msg4_fg05"
                                style="@style/Font12_white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:background="@drawable/bg_round_org_msg"
                                android:gravity="center"
                                android:text="2"
                                android:textSize="10sp"
                                android:visibility="gone" />

                        </FrameLayout>

                        <TextView
                            style="@style/Font14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp"
                            android:text="已评价" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!--积分 报备 商品 报修-->
            <LinearLayout
                android:id="@+id/lay_other1_fg05"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lay_orders_fg05"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_round_white_10"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp">

                    <LinearLayout
                        android:id="@+id/lay_jifen_fg05"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
