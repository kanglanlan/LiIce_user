<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include layout="@layout/title"></include>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/Font14_hui2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="客户失败原因"/>

            <TextView
                android:id="@+id/tv_failreason_rd"
                style="@style/Font14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp"
                android:text="失败原因"/>

            <TextView
                style="@style/Font14_hui2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="报备客户信息"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="20dp">

                <TextView
                    android:id="@+id/tv_time_rd"
                    style="@style/Font14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Time"/>
                <!--项目编号-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/Font14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="项目编号："/>

                    <TextView
                        android:id="@+id/tv_pnum_rd"
                        style="@style/Font14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"/>
                </LinearLayout>
                <!--项目名称-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/Font14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="项目名称："/>

                    <TextView
                        android:id="@+id/tv_pname_rd"
                        style="@style/Font14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""/>
                </LinearLayout>
                <!--类型  面积-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/Font14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="项目类型："/>

                        <TextView
                            android:id="@+id/tv_ptype_rd"
                            style="@style/Font14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/Font14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="项目面积："/>

                        <TextView
                            android:id="@+id/tv_parea_rd"
                            style="@style/Font14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""/>
                    </LinearLayout>
                </LinearLayout>
                <!--业主 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/Font14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="业主姓名："/>

                        <TextView
                            android:id="@+id/tv_ownername_rd"
                            style="@style/Font14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/Font14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="业主电话："/>

                        <TextView
                            android:id="@+id/tv_ownertel_rd"
                            style="@style/Font14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""/>
                    </LinearLayout>
                </LinearLayout>
                <!--推荐人  意向品牌-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/Font14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="推荐人："/>

                        <TextView
                            android:id="@+id/tv_fromname_rd"
                            style="@style/Font14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/Font14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="意向品牌："/>

                        <TextView
                            android:id="@+id/tv_intent_rd"
                            style="@style/Font14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""/>
                    </LinearLayout>
                </LinearLayout>
                <!--意向空调类型-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/Font14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="意向空调类型："/>

                    <TextView
                        android:id="@+id/tv_intent_type_rd"
                        style="@style/Font14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""/>
                </LinearLayout>
                <!--成交方式-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/Font14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="成交方式："/>

                    <TextView
                        android:id="@+id/tv_paystyle_rd"
                        style="@style/Font14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""/>
                </LinearLayout>
                <!--项目地址-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_ads_rd"
                        style="@style/Font14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="项目地址："/>


                </LinearLayout>
                <!--项目信息简要说明-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_note_rd"
                        style="@style/Font14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="项目信息简要说明："/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</LinearLayout>