<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_denglumima"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/Font14"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginTop="9dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="登录密码"></TextView>

            <TextView
                style="@style/Font14_hui"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginTop="9dp"
                android:background="@color/white"
                android:drawableRight="@mipmap/icon_youlight"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="设置/修改"></TextView>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:background="@color/xian" />

        <LinearLayout
            android:id="@+id/ll_zhifumima"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/Font14"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginTop="9dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="支付密码"></TextView>

            <TextView
                style="@style/Font14_hui"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginTop="9dp"
                android:background="@color/white"
                android:drawableRight="@mipmap/icon_youlight"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="设置/修改"></TextView>
        </LinearLayout>

<include layout="@layout/xian_3"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/cb_xiaoxi"
                style="@style/Font14"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:button="@null"
                android:checked="true"
                android:drawableRight="@drawable/cb_xiaoxi"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="消息通知" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="10dp"
                android:background="@color/xian" />

            <TextView
                android:id="@+id/tv_about"
                style="@style/Font14"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:drawableRight="@mipmap/icon_youlight"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="关于我们"></TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="10dp"
                android:background="@color/xian" />
            <TextView
                android:id="@+id/tv_fakui"
                style="@style/Font14"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:drawableRight="@mipmap/icon_youlight"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="意见反馈"></TextView>

        <include layout="@layout/xian_3"/>

            <LinearLayout
                android:id="@+id/ll_huancun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/Font14"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="清除缓存"></TextView>

                <TextView
                    android:id="@+id/tv_huancun"
                    style="@style/Font14_hui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:drawablePadding="10dp"
                    android:drawableRight="@mipmap/icon_youlight"
                    android:gravity="right"
                    android:text="0.0" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="10dp"
                android:background="@color/xian" />

            <LinearLayout
                android:id="@+id/ll_bb"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    style="@style/Font14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更新版本" />

                <com.meida.MyView.CircleImageView
                    android:id="@+id/img_hd"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginLeft="10dp"
                    android:src="@color/red"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_banben"
                    style="@style/Font14_hui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="10dp"
                    android:drawableRight="@mipmap/icon_youlight"
                    android:gravity="right"
                    android:text="当前版本V1.0.0" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_exit"
        style="@style/Font15_main"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="9dp"
        android:background="@color/white"
        android:textColor="@color/cheng"
        android:gravity="center"
        android:text="退出登录" />

</LinearLayout>
