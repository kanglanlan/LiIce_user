<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    >
    <LinearLayout
        android:id="@+id/activity_shen_qing_biao"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg"
        android:orientation="vertical"
        >

        <include layout="@layout/title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:visibility="gone"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <TextView
                    style="@style/Font14"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="微信号" />

                <EditText
                    android:id="@+id/et_shenqing_weixinhao"
                    style="@style/Font14_hui2"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="请输入微信号"
                    android:maxLength="40" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:visibility="gone"
                android:layout_marginLeft="10dp"
                android:background="@color/xian" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:visibility="gone"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <TextView
                    style="@style/Font14"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="邮箱" />

                <EditText
                    android:id="@+id/et_shenqing_youxiang"
                    style="@style/Font14_hui2"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="请输入邮箱"
                    android:maxLength="50" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:visibility="gone"
                android:layout_marginLeft="10dp"
                android:background="@color/xian" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <TextView
                    style="@style/Font14"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="姓名" />

                <EditText
                    android:id="@+id/et_shenqing_name"
                    style="@style/Font14_hui2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="请输入姓名"
                    android:background="@color/white"
                    android:maxLength="20" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="10dp"
                android:background="@color/xian" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <TextView
                    style="@style/Font14"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="性别" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_nan"
                        style="@style/Font14_hui2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="男" />

                    <RadioButton
                        android:id="@+id/rb_nv"
                        style="@style/Font14_hui2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:text="女" />
                </RadioGroup>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="10dp"
                android:background="@color/xian" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <TextView
                    style="@style/Font14"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="年龄" />

                <EditText
                    android:id="@+id/et_shenqing_nianling"
                    style="@style/Font14_hui2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:hint="请输入年龄"
                    android:inputType="number"
                    android:maxLength="3" />

                <TextView
                    style="@style/Font14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:text="岁" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:visibility="gone"
                android:layout_marginLeft="10dp"
                android:background="@color/xian" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:visibility="gone"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <TextView
                    style="@style/Font14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="空调行业从业时间" />

                <EditText
                    android:id="@+id/et_shenqing_shijian"
                    style="@style/Font14_hui2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:hint="请输入时间"
                    android:inputType="number"
                    android:maxLength="4" />

                <TextView
                    style="@style/Font14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:text="年" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="10dp"
                android:background="@color/xian" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <TextView
                    style="@style/Font14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所在城市" />

                <TextView
                    android:id="@+id/tv_shenqing_city"
                    style="@style/Font14_hui2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawablePadding="5dp"
                    android:drawableRight="@mipmap/icon_youlight"
                    android:gravity="center_vertical|right"
                    android:hint="请选择"
                    android:paddingRight="10dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="10dp"
                android:background="@color/xian" />

            <TextView
                style="@style/Font14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="申请服务商类别" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">



                <LinearLayout
                    android:id="@+id/ll_fws"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_shenqing_fws"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@mipmap/ico_lb027" />

                    <TextView
                        style="@style/Font14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="服务商" />

                    <TextView
                        android:id="@+id/tv_liaoje_fws"
                        style="@style/Font13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="(了解详情)"
                        android:textColor="@color/cheng" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_hxfws"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_shenqing_hexin"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@mipmap/ico_lb026" />

                    <TextView
                        style="@style/Font14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="核心服务商" />

                    <TextView
                        android:id="@+id/tv_liaoje_hexin"
                        style="@style/Font13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="(了解详情)"
                        android:textColor="@color/cheng" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="10dp"
                android:visibility="gone"
                android:background="@color/xian" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:visibility="gone"
                android:id="@+id/ll_fuwu"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <TextView
                    style="@style/Font14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="可服务范围" />

                <TextView
                    android:id="@+id/tv_shenqing_fuwudi"
                    style="@style/Font14_hui2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawablePadding="5dp"
                    android:drawableRight="@mipmap/icon_youlight"
                    android:gravity="center_vertical|right"
                    android:hint="请选择"
                    android:paddingRight="10dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="10dp"
                android:background="@color/xian" />
        </LinearLayout>

        <Button
            android:id="@+id/bt_tijiao"
            style="@style/Font15_white"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/loginbt"
            android:text="提交" />
    </LinearLayout>
</ScrollView>
    </LinearLayout>