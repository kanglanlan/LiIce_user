<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_bu_tie_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.meida.liice.BuTieInfoActivity">
    <View
        android:layout_width="match_parent"
        android:background="@color/main"
        android:layout_height="@dimen/toolbar_padding_top" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/main"
        android:layout_height="42dp">

        <ImageView
            android:id="@+id/img_title_back"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:clickable="true"
            android:onClick="back"
            android:padding="12dp"
            android:src="@drawable/headback_icon" />

        <android.support.design.widget.TabLayout
            android:id="@+id/tablayout_mo"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            app:tabGravity="center"
            app:tabIndicatorColor="@color/white"
            app:tabIndicatorHeight="2dp"
            app:tabMinWidth="0dp"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/white"
            app:tabTextAppearance="@style/Font17"
            app:tabTextColor="@color/white"
            />


    </RelativeLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_mo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        />
</LinearLayout>
