<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#EEFFFFFF"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="请输入支付密码"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_dialog_withdraw_close"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:onClick="doClick"
            android:padding="15dp"
            android:src="@drawable/lefta" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/xian" />

    <TextView
        android:id="@+id/tv_dialog_withdraw_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:text="提现0元"
        style="@style/Font15_hui"
         />

    <com.jungly.gridpasswordview.GridPasswordView
        android:id="@+id/gpv_dialog_withdraw_pwd"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:gpvLineColor="#999999"
        app:gpvLineWidth="1px"
        app:gpvTextColor="@color/black"
        app:gpvCornerRadius="3dp" />

    <TextView
        android:id="@+id/tv_dialog_withdraw_forget"
        style="@style/Font13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="15dp"
        android:clickable="true"
        android:gravity="center"
        android:onClick="doClick"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="忘记密码？"
        android:textColor="@color/blue" />

</LinearLayout>