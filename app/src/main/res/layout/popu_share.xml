<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/tv_qq"
            style="@style/Font13_hui"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/ico_lb045"
            android:gravity="center"
            android:onClick="doclick"
            android:text="QQ好友" />

        <TextView
            android:id="@+id/tv_weixin"
            style="@style/Font13_hui"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/ico_lb044"
            android:gravity="center"
            android:onClick="doclick"
            android:text="微信好友" />

        <TextView
            android:id="@+id/tv_pengyouquan"
            style="@style/Font13_hui"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/ico_lb046"
            android:gravity="center"
            android:onClick="doclick"
            android:text="朋友圈" />

        <TextView
            android:id="@+id/tv_kongjan"
            style="@style/Font13_hui"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/ico_lb047"
            android:gravity="center"
            android:onClick="doclick"
            android:text="QQ空间" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_sharequxiao"
        style="@style/Font15"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:background="@drawable/baikuang"
        android:gravity="center"
        android:onClick="doclick"
        android:text="取消" />
</LinearLayout>
